extends layout

block content
  h1=title

  form.form-group2(method='POST' action='')
    div.form-group1
      label(for='game') Game:
      input#game(type='text', readonly, required='true', value=(undefined===gameinfo.title ? '' : gameinfo.title))
      input(type='hidden' name='game' value=(undefined===gameinfo ? '' : gameinfo._id))

    div.form-group1
      label(for='status') Status:
      select#status(type='select', placeholder='Select status', name='status', required='true')
        option(value='Available') Available
        option(value='Sold') Sold
        option(value='Coming Soon') Coming Soon

    button.form-group1(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
