extends layout

block content

  h1 ID: #{gameinstance._id}

  p #[strong Title: ]
    a(href=gameinstance.game.url) #{gameinstance.game.title}
  p #[strong Summary: ]
    p #{gameinstance.game.description}

  p #[strong Status: ]
    if gameinstance.status=='Available'
      span.success #{gameinstance.status}
    else if gameinstance.status=='Sold'
      span.warning #{gameinstance.status}
    else
      span.delete #{gameinstance.status}

  hr
  p
    a(href=gameinstance.url +'/delete') Delete Game Instance
